#!/usr/bin/env ruby

puts '== Instalando dependÃªncias =='
system 'gem install bundler --conservative'
system('bundle check') || system('bundle install')

require 'sqlite3'

puts "\n== Preparando banco de dados =="
begin
  db = SQLite3::Database.open 'db/database.db'
  db.execute <<~SQL
    CREATE TABLE Tasks(
      category varchar(255),
      name varchar(255),
      descr varchar(255)
    );
  SQL

  seed_data = [[1, 'Usar hashs', ''],
               [3, 'Aprender a fazer tabelas', ''],
               [2, 'Automatizar tabelas no banco de dados', ''],
               [1, 'Usar banco de dados sem rails', ''],
               [4, 'Aprender mais sobre uso de APIs', '']]

  seed_data.each do |data|
    db.execute 'INSERT INTO Tasks VALUES ( ?, ?, ? )', data
  end

rescue SQLite3::Exception => e
  puts e
ensure
  db.close if db
end
